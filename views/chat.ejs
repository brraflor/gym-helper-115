<!DOCTYPE html>
<html lang="en" ng-app="chatApp">
<head>
    <meta charset="UTF-8">
    <title>Group Chat</title>
    <% include partials/header %>
    <% include partials/nav %>


    <!-- Style  -->
    <link rel="stylesheet" href="/css/chat.css">
    <link rel="stylesheet" href="/css/nav.css">
    <link href="https://fonts.googleapis.com/css?family=Bitter" rel="stylesheet">
    <script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
    <!-- End-Style  -->
</head>

   <!-- Group Selection box  -->
<body ng-controller="ChatController">

    <div class="container">
  <ul class="nav nav-pills" role="tablist">
  <li role="presentation" class="active">
  <li> <a href="#" ng-click="clicked(1)"><img class="chatImg" src="images/casual.jpg"/></a></li>
  <li> <a href="#" ng-click="clicked(2)"><img class="chatImg" src="images/cardio.jpeg"/></a></li>
  <li> <a href="#"ng-click="clicked(3)"><img class="chatImg" src="images/bulk.jpeg"  /></a></li>
  <li> <a href="#" ng-click="clicked(4)"><img class="chatImg" src="images/yoga.jpeg"  /></a></li>
  <li> <a href="#" ng-click="clicked(5)"><img class="chatImg" src="images/food.jpeg"  /></a></li>
    </ul>
    <!-- End-Group Selection box > -->
    <!-- Chat box  -->
        <div class="panel panel-primary">
            <div id="chatPanel" class="panel-heading">Chat</div>
            <div class="panel-body">
                <p ng-repeat="m in messages">{{m.name}} - {{m.date | date:'medium'}} : {{m.message}} </p>
                <p>  </p>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Message here..." ng-model="messageText">
                </div>
                <button type="submit" class="btn" ng-click="send()">Send</button>
            </div>
        </div>
        <!-- End-Chat box  -->

        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.1/angular.min.js"></script>
        <script src="js/app.js"></script>
        <script src="https://cdn.firebase.com/libs/angularfire/2.3.0/angularfire.min.js"></script>

<% include partials/footer %>
