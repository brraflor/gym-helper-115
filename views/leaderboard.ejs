<!DOCTYPE html>
<script>
initApp = function() {
  firebase.auth().onAuthStateChanged(function(user) {
    if (user) {
      // User is signed in.
      var displayName = user.displayName;
      var uid = user.uid;
      var exerciseStr = "";
      var rankOfUsersInLeaderboard = 0;
      console.log(uid);
      
      var refLeaderboard = firebase.database().ref("leaderboard");
      var exercise = firebase.database().ref('users/' + uid + '/leaderboard/exercise').once('value').then(function(snapshot) {
        exerciseStr = snapshot.val();
      });

      console.log(exerciseStr);
      console.log ('spacer');
      refLeaderboard.orderByValue(exerciseStr).on("value", function(snapshot){
        snapshot.forEach(function(data) {
          rankOfUsersInLeaderboard = rankOfUsersInLeaderboard+1;
          document.write('<div class="head"><div><p class="leaderboard_rank">' + rankOfUsersInLeaderboard + '</p><div class="leaderboard"><h2 class="leaderboard_text">'+ data.key + '</h2></div><div class="leaderboard_sets"><h2 class="leaderboard_text">' + data.val() + '</h2></div></div>');//not complete
        });

        document.write('</div></div><p>&nbsp;</p><p>&nbsp;</p></div>');
        document.write('</body>/html>');
      });

    } else {
      console.log('user is signed out');
      // User is signed out.
    }
  }, function(error) {
    console.log(error);
  });
};

window.addEventListener('load', function() {
  initApp()
});
</script>
